{
  "name": "rxtask",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean && npm run build-ts",
    "build-ts": "tsc --declaration --sourceMap --outDir dist",
    "clean": "rimraf dist",
    "test": "istanbul cover -e .ts -x '*.test.ts' _mocha -- 'test/**/*.test.ts' --require ts-node/register --require test/setup.ts"
  },
  "devDependencies": {
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.4",
    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^5.1.0",
    "rimraf": "^2.6.2",
    "rxjs": "^5.5.10",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    "ts-node": "^6.0.0",
    "typescript": "^2.8.1"
  }
}
